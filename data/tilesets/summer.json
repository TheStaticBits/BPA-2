{
    "name": "Summer",
    "baseTile": " ",
    "music": "res/sounds/music/summersong.wav",
    
    "tiles": {
        " ": { "move": "none",    "path": "res/tiles/summer/tile.png"      },
        "-": { "move": "forward", "path": "res/tiles/summer/path.png"      },
        "l": { "move": "left",    "path": "res/tiles/summer/turnLeft.png"  },
        "r": { "move": "right",   "path": "res/tiles/summer/turnRight.png" },
        "+": { "move": "forward", "path": "res/tiles/summer/cross.png"     },
        "T": { "move": "left",    "path": "res/tiles/summer/tPath.png"     }
    },
    "rotated": {
        "|": { "tile": "-", "degrees":  90 },

        "R": { "tile": "r", "degrees": -90 },
        "k": { "tile": "r", "degrees": 180 },
        "K": { "tile": "r", "degrees":  90 },
        
        "L": { "tile": "l", "degrees":  90 },
        "i": { "tile": "l", "degrees": 180 },
        "I": { "tile": "l", "degrees": -90 },

        "t": { "tile": "T", "degrees": 180, "move": "right" },
        "y": { "tile": "T", "degrees": 90,  "move": "left"  },
        "Y": { "tile": "T", "degrees": -90, "move": "left"  }
    },

    "unmovable": {
        "e": { "tile": " " }
    },

    "deco": {
        "1": {
            "tile": " ",
            "placable": false, "moveWithTile": true, "offset": [ 20, 20 ],
            "animation": { "path": "res/tiles/summer/Deco/Beachtowel.png", "frames": 1, "delay": 1 }
        }
        ,"2": {
            "tile": " ",
            "placable": false, "moveWithTile": true, "offset": [ 20, 20 ],
            "animation": { "path": "res/tiles/summer/Deco/Sandcastle.png", "frames": 1, "delay": 1 }
        }
    }
}
